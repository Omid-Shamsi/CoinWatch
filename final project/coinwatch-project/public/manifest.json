{
  "manifest_version": 2,
  "name": "ConiCheck",
  "version": "1.0",
  "description": "Description of your extension",
  "permissions": ["tabs"],
  "icons": {
    "16": "CoinWatch-Icon-16.png",
    "48": "CoinWatch-Icon-48.png",
    "128": "CoinWatch-Icon-128.png"
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "CoinWatch-Icon-16.png",
      "48": "CoinWatch-Icon-48.png",
      "128": "CoinWatch-Icon-128.png"
    }
  },
  "web_accessible_resources": [
    "https://js.stripe.com/v3/buy-button.js"
  ],
  "content_security_policy": "script-src 'self' https://s3.tradingview.com; object-src 'self'"

}
